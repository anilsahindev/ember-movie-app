<div class="flex min-h-screen justify-center align-center flex-wrap bg-gray-50 p-4">
    <div class="flex mr-8 mb-8 flex-col rounded shadow-xl lg:w-1/5 sm:w-1/2">
        <div class="flex-shrink-0">
            <img class="h-10/12 w-full object-cover" src="https://image.tmdb.org/t/p/w154/{{this.model.poster_path}}" alt="Person hiking in the woods" />
        </div>
        <div class="flex-1 bg-white p-6 flex flex-col justify-around">
            <div class="flex-1">
                <p class="text-sm leading-5 font-medium text-teal-600"></p>
                    <h3 class="mt-2 truncate max-w-sm text-xl leading-7 font-semibold text-gray-900">
                        {{this.model.original_title}}
                    </h3>
                    <p>{{ this.model.overview }}</p>
            </div>
            <div class="flex text-sm justify-between leading-5 text-gray-500">
                <span class="mr-1">
                    Relase Date <br> {{ this.model.release_date }}
                </span>
                <span>
                    IMDB Score <br> {{this.model.vote_average}}
                </span>
            </div>
        </div>
    </div>
</div>